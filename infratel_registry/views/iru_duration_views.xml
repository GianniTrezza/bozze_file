<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- ********************** MODELLO iru.duration ********************** -->
        <!-- form view -->
        <record id="iru_duration_form_view" model="ir.ui.view">
            <field name="name">iru.duration.form.view</field>
            <field name="model">iru.duration</field>
            <field name="arch" type="xml">
                <form string="Iru duration form">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- tree view -->
        <record id="iru_duration_tree_view" model="ir.ui.view">
            <field name="name">iru.duration.tree.view</field>
            <field name="model">iru.duration</field>
            <field name="arch" type="xml">
                <tree string="Iru duration tree">
                    <field name="name"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>