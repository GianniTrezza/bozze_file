<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- ********************** MODELLO project.request ********************** -->
        <!-- form view -->
        <record id="project_request_form_view" model="ir.ui.view">
            <field name="name">project.request.form.view</field>
            <field name="model">project.request</field>
            <field name="arch" type="xml">
                <form string="Project request form">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- tree view -->
        <record id="project_request_tree_view" model="ir.ui.view">
            <field name="name">project.request.tree.view</field>
            <field name="model">project.request</field>
            <field name="arch" type="xml">
                <tree string="Project request tree">
                    <field name="name"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>