<odoo>

    <record id="view_account_move_booking_form_inherit" model="ir.ui.view">
        <field name="name">account.move.booking.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="payment_reference" position="replace">
                <field name="createTime"/>
            </field>

            <field name="invoice_date" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>

            <label for="invoice_date" position="attributes">
                <attribute name="invisible">1</attribute>
            </label>

            <field name="invoice_date_due" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>

            <label for="invoice_date_due" position="attributes">
                <attribute name="invisible">1</attribute>
            </label>


            <!-- Set the 'late' filter as invisible
            <filter name="late" position="attributes">
                <attribute name="invisible">1</attribute>
            </filter>

            
            <filter name="invoice_date" position="attributes">
                <attribute name="invisible">1</attribute>
            </filter>

            <filter name="due_date" position="attributes">
                <attribute name="invisible">1</attribute>
            </filter> -->



            <!-- <filter name="late" position="attributes">
                <attribute name="invisible">1</attribute>
            </filter>

            <filter name="invoice_date" position="attributes">
                <attribute name="invisible">1</attribute>
            </filter>

            <filter name="due_date" position="attributes">
                <attribute name="invisible">1</attribute>
            </filter> -->



            <field name="createTime" position="after">
                <field name="updateTime"/>
            </field>

            <field name="partner_id" position="after">
                <field name="checkout"/>
            </field>

            <field name="partner_id" position="after">
                <field name="checkin"/>
            </field>
            
            <field name="partner_id" position="after">
                <field name="booking_id"/>
            </field>

            <!-- Prima page: Dettagli prenotazione -->

            <xpath expr="//page/field[@name='invoice_line_ids']/.." position="attributes">
                <attribute name="string">Dettagli Prenotazione</attribute>
            </xpath>
            
            <xpath expr="//page/field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="replace">
                <field name="roomName"/>
            </xpath>
            
            <xpath expr="//page/field[@name='invoice_line_ids']/tree/field[@name='name']" position="replace">
                <field name="channelNotes"/>
            </xpath>

            <xpath expr="//page/field[@name='invoice_line_ids']/tree/field[@name='quantity']" position="replace">
                <field name="rooms"/>
            </xpath>
            
            <xpath expr="//page/field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="replace">
                <field name="roomGross"/>
            </xpath>
        
            
            <xpath expr="//page/field[@name='invoice_line_ids']/tree/field[@name='price_subtotal']" position="replace">
                <field name="totalPaid"/>
            </xpath>
            <!-- Seconda page: Informazioni generali -->
            <xpath expr="//page[3]" position="attributes">
                <attribute name="string">Informazioni generali</attribute>
            </xpath>

             <!-- Informazioni Stanza e campi -->

            <xpath expr="//page[@name='other_info']/group/group[@name='sale_info_group']" position="attributes">
                <attribute name="string">Informazioni Stanza</attribute>
            </xpath>

            <xpath expr="//page[@name='other_info']/group/group[@name='sale_info_group']/field[@name='ref']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//page[@name='other_info']/group/group[@name='sale_info_group']/field[@name='invoice_user_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <!-- <xpath expr="//page[@name='other_info']/group/group[@name='sale_info_group']/field[@name='team_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath> -->

            <xpath expr="//page[@name='other_info']/group/group[@name='sale_info_group']/field[@name='partner_bank_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <!-- <xpath expr="//page[@name='other_info']/group/group[@name='accounting_info_group']/field[@name='team_id']" position="replace">
                <field name="children"/>
            </xpath> -->

            <!-- <xpath expr="//page[@name='other_info']/group/group[@name='sale_info_group']/field[@name='ref']" position="replace"> -->

            <!-- Informazioni Cliente e campi -->

            <xpath expr="//page[@name='other_info']/group/group[@name='accounting_info_group']" position="attributes">
                <attribute name="string">Informazioni Cliente</attribute>
            </xpath>

            <xpath expr="//page[@name='other_info']/group/group[@name='accounting_info_group']/field[@name='company_id']" position="replace">
                <field name="children"/>
            </xpath>

            <xpath expr="//page[@name='other_info']/group/group[@name='accounting_info_group']/field[@name='invoice_incoterm_id']" position="replace">
                <field name="infants"/>
            </xpath>

            <xpath expr="//page[@name='other_info']/group/group[@name='accounting_info_group']/field[@name='fiscal_position_id']" position="replace">
                <field name="totalChildren"/>
            </xpath>

            <xpath expr="//page[@name='other_info']/group/group[@name='accounting_info_group']/field[@name='auto_post']" position="replace">
                <field name="totalInfants"/>
            </xpath>

            <xpath expr="//page[@name='other_info']/group/group[@name='accounting_info_group']/field[@name='to_check']" position="replace">
                <field name="totalGuest"/>
            </xpath>

            <!-- Al posto di marketing, Info Pagamento: pseudocode -->
            <!-- <xpath expr="//page[@name='other_info']/group/group[@name='marketing_info_group']" position="attributes">
                <attribute name="string">Informazioni Pagamento</attribute>
            </xpath> -->

            <!-- <xpath expr="//field[@name='tag_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath> -->
        </field>
    </record>
