<odoo>
    <record id="view_account_move_booking_form_inherit" model="ir.ui.view">
        <field name="name">account.move.booking.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            
            <field name="partner_id" position="after">
                <field name="refer"/>
            </field>

            <field name="refer" position="after">
                <field name="checkin"/>
            </field>

            <field name="checkin" position="after">
                <field name="checkout"/>
            </field>

             <field name="checkout" position="after">
                <field name="totalGuest"/>
            </field>

            <field name="payment_reference" position="after">
                <field name="rooms"/>
            </field>

            <field name="rooms" position="after">
                <field name="roomGross"/>
            </field>

            <xpath expr="//page[@name='aml_tab']/field[@name='line_ids']/tree/field[@name='account_id']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>

            <xpath expr="//page[@name='aml_tab']/field[@name='line_ids']/tree/field[@name='partner_id']" position="replace">
                <field name="product_id"/>
            </xpath>

            <xpath expr="//page[@name='aml_tab']/field[@name='line_ids']/tree/field[@name='analytic_distribution']" position="replace">
                <field name="quantity"/>
            </xpath>

            <xpath expr="//page[@name='aml_tab']/field[@name='line_ids']/tree/field[@name='debit']" position="replace">
                <field name="price_unit"/>
            </xpath>
            
            <xpath expr="//page[@name='aml_tab']/field[@name='line_ids']/tree/field[@name='credit']" position="replace">
                <field name="tax_ids"/>
            </xpath>

            <xpath expr="//page[@name='aml_tab']/field[@name='line_ids']/tree/field[@name='tax_tag_ids']" position="replace">
                <field name="price_subtotal"/>
            </xpath>
            <!-- Modifica form di aml_tab -->
            
            <xpath expr="//page[@name='aml_tab']/field[@name='line_ids']/form/group/field[@name='partner_id']" position="replace">
                <field name="product_id"/>
            </xpath>

            
            <xpath expr="//page[@name='aml_tab']/field[@name='line_ids']/form/group/field[@name='analytic_distribution']" position="replace">
                <field name="quantity"/>
            </xpath>
            <xpath expr="//page[@name='aml_tab']/field[@name='line_ids']/form/group/field[@name='amount_currency']" position="replace">
                <field name="price_unit"/>
            </xpath>

            <xpath expr="//page[@name='aml_tab']/field[@name='line_ids']/form/group/field[@name='debit']" position="replace">
                <field name="tax_ids"/>
            </xpath>
            <xpath expr="//page[@name='aml_tab']/field[@name='line_ids']/form/group/field[@name='credit']" position="replace">
                <field name="price_subtotal"/>
            </xpath>
    

            
            <!-- <xpath expr="//page[@name='aml_tab']/field[@name='line_ids']/form/group/field[@name='debit']" position="replace">
                <field name="price_unit"/>
            </xpath>

            <xpath expr="//page[@name='aml_tab']/field[@name='line_ids']/form/group/field[@name='credit']" position="replace">
                <field name="tax_ids"/>
            </xpath>

            <xpath expr="//page[@name='aml_tab']/field[@name='line_ids']/form/group/field[@name='tax_tag_ids']" position="replace">
                <field name="price_subtotal"/>
            </xpath> -->
        </field>
    </record>



    <record id="FATTURE_SEQUENCE" model="ir.sequence">
       <field name="name">Sequenza</field>
       <field name="code">account.move</field>
       <field name="prefix">ACCR/%(year)s/</field>
       <field name="number_increment" eval="1"/>
    </record>

</odoo>

