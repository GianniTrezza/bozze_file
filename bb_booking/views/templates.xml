<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_journal_entries_inherit" inherit_id="accounting_pdf_reports.report_journal_entries">

        <xpath expr="//table/thead/tr/th[contains(text(), 'Partner')]" position="replace">
            <th>Product</th>
        </xpath>

        <xpath expr="//table/thead/tr/th[contains(text(), 'Analytic Account')]" position="replace">
            <th>Quantity</th>
        </xpath>

        <xpath expr="//table/thead/tr/th[contains(text(), 'Debit')]" position="replace">
            <th>Taxes</th>
        </xpath>

        <xpath expr="//table/thead/tr/th[contains(text(), 'Credit')]" position="replace">
            <th>Subtotal</th>
        </xpath>


        <xpath expr="//table/tbody/t/tr/td[span/@t-field='line.partner_id.display_name']" position="replace">
            <td>
                <span t-field="line.product_id.display_name"/>
            </td>
        </xpath>

        <xpath expr="//table/tbody/t/tr/td[span/div/@t-foreach='line.analytic_distribution']" position="replace">
            <td>
                <span t-field="line.quantity"/>
            </td>
        </xpath>

        <xpath expr="//table/tbody/t/tr/td[span/@t-field='line.debit']" position="replace">
            <td class="text-end">
                <span t-field="line.tax_ids" t-options="{'widget': 'many2many_tags'}"/>
            </td>
        </xpath>

        <xpath expr="//table/tbody/t/tr/td[span/@t-field='line.credit']" position="replace">
            <td class="text-end">
                <span t-field="line.price_subtotal" t-options="{'widget': 'monetary', 'display_currency': line.currency_id}"/>
            </td>
        </xpath>

    </template>
</odoo>
